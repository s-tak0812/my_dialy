<div class="container my-5">
  <div class='row'>
    <div class="col-sm-12 col-md-10 col-lg-10 px-5 px-sm-0 mx-auto">
      <div class="d-flex">
        <h3 class="bg-light"><strong>ログイン</strong></h3>
      </div>
      <%= render "public/shared/error_messages", resource: resource %>

      <%= form_with model:@customer, url:customer_session_path do |f| %>
        <table class="table table-borderless my-3">
          <tr>
            <td style="width:30%">
              <%= f.label :email %>
            </td>
            <td class="form-group" style="width:70%">
              <%= f.email_field :email, placeholder: "sample@sample.com", autofocus: true, autocomplete: "email" %>
            </td>
          </tr>
          <tr>
            <td>
              <%= f.label :password %>
            </td>
            <td class="form-group">
              <%= f.password_field :password, placeholder: "6文字以上", autocomplete: "current-password" %>
            </td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit class:"btn btn-success" %></td>
          </tr>
          <tr>
            <td></td>
            <td>
              新規会員登録は　<%= link_to "こちら >", new_customer_registration_path, class: 'btn btn-secondary' %>
            </td>
          </tr>
        </table>
      <% end %>

    </div>
  </div>
</div>



<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
<% end %>
