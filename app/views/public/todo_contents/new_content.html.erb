<div class="container my-5">
  <div class='row'>
    <div class="col-sm-12 col-md-10 col-lg-7 px-5 px-sm-0 mx-auto">
      <div class="d-flex justify-content-center">
        <h3 class="bg-light">
          <strong>"<%= @todo_list.title %>"にメモ追加</strong>
        </h3>
      </div>
      <%= render 'public/shared/error_messages', resource: @todo_content %>
      <!--投稿フォーム-->
      <div>
        <%= form_with model:@todo_content, url: content_create_path, method: :post do |f| %>
          <%= f.hidden_field :todo_list_id, value: @todo_list.id %>

          <div class="form-group my-3">
            <%= f.label "メモ内容" %>
            <%= f.text_area :content, placeholder: "内容", autofocus: true, rows: 5, class: "form-control todo_content_content" %>
          </div>

          <div class="form-group text-center my-5">
            <%= f.submit "追加する", class: 'btn btn-outline-success' %>
          </div>
        <% end %>
      </div>

      <div class="d-flex justify-content-between my-5">
        <%= link_to "前に戻る", todo_list_path(@todo_list.id), class:"btn btn-outline-secondary" %>

        <%= link_to "一覧に戻る", todo_lists_path, class:"btn btn-outline-secondary" %>
      </div>

    </div>
  </div>
</div>
