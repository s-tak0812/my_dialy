<%= form_with model: schedule do |f| %>
  <div class="form-group my-3">
    <div class="row">
      <div class="col-6">
        <%= f.label :start_time %>
        <%= f.datetime_field :start_time, class: "form-control start_time" %>
      </div>

      <div class="col-6">
        <%= f.label :end_time %>
        <%= f.datetime_field :end_time, class: "form-control end_time" %>
      </div>
    </div>
  </div>

  <div class="form-group my-3">
    <%= f.label :title %>
    <%= f.text_field :title, placeholder: "タイトル(20文字以内)", class: "form-control title" %>
  </div>

  <div class="form-group my-3">
    <%= f.label :content %>
    <%= f.text_area :content, placeholder: "メモ", class: "form-control content" %>
  </div>

  <div class="form-group text-center my-2">
    <%= f.submit class: 'btn btn-outline-success' %>
  </div>
<% end %>
