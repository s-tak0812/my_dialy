<%= form_with model: schedule do |f| %>
  <div class="form-group my-3">
    <%= f.label :タイトル %>
    <%= f.text_field :title, placeholder: "タイトル", autofocus: true, class: "form-control title" %>
  </div>

  <div class="form-group my-3">
    <%= f.label :メモ %>
    <%= f.text_area :content, placeholder: "メモ", class: "form-control content" %>
  </div>

  <div class="form-group my-3">
    <div class="row">
      <div class="col-4">
        <%= f.label :日にち %>
        <%= f.date_field :date, class: 'form-control date' %>
      </div>

      <div class="col-4">
        <%= f.label :開始時間 %>
        <%= f.time_field :start_time, class: "form-control start_time" %>
      </div>

      <div class="col-4">
        <%= f.label :終了時間 %>
        <%= f.time_field :end_time, class: "form-control end_time" %>
      </div>
    </div>
  </div>

  <div class="form-group text-center my-5">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
