<div class="container my-5">
  <div class="text-success">
    <strong><%= flash[:notice] %></strong>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-10 col-lg-10 px-5 px-sm-0 mx-auto">
      <div class="d-flex justify-content-center">
        <h3 class="bg-light"><strong>お問い合わせ</strong></h3>
      </div>

      <!--投稿フォーム-->
      <div class="col-8 mx-auto">
        <%= render 'public/shared/error_messages', resource: @contact %>
        <%= render 'public/contacts/form', contact: @contact %>
      </div>

      <table class="table table-hover my-3 text-center">
        <thead class="table-active">
          <tr>
            <th>タイトル</th>
            <th>送信日</th>
            <th>返信</th>
          </tr>
        </thead>
        <tbody>
          <% @contacts.each do |contact| %>
            <tr>
              <td><%= link_to contact.title, contact_path(contact.id), class:"btn btn-outline-dark p-1" %></td>
              <td><%= contact.created_at.strftime("%Y-%m-%d") %></td>
              <td>
                <% if contact.reply.present? %>
                  <i class="fas fa-check text-success"></i>
                <% else %>
                  <i class="fas fa-times text-danger"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>

