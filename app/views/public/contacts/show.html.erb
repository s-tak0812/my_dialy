<div class="container my-5">
  <div class='row'>
    <div class="col-sm-12 col-md-10 col-lg-10 px-5 px-sm-0 mx-auto">
      <div class="d-flex justify-content-center">
        <h3 class="bg-light"><strong>お問い合わせ詳細</strong></h3>
      </div>

      <div class="d-flex justify-content-center">
        <%= link_to "お問い合わせ一覧へ", contacts_path, class:"btn btn-outline-secondary my-3" %>
      </div>

      <table class="table table-bordered my-3">
        <tr>
          <td style="width:30%" class="text-right pr-3">お問い合わせ日：</td>
          <td>
            <%= @contact.created_at.strftime("%Y-%m-%d") %>
          </td>
        </tr>

        <tr>
          <td class="text-right pr-3">タイトル：</td>
          <td>
            <strong><%= @contact.title %></strong>
          </td>
        </tr>

        <tr>
          <td class="text-right pr-3">問い合わせ内容：</td>
          <td>
            <%= simple_format(@contact.body) %>
          </td>
        </tr>

        <% if @contact.reply.present? %>
          <tr>
            <td class="text-right pr-3">返信日：</td>
            <td>
              <%= @contact.updated_at.strftime("%Y-%m-%d") %>
            </td>
          </tr>

          <tr>
            <td class="text-right pr-3">返信内容：</td>
            <td class="form-group">
              <!--返信内容の型-->
              <%= render 'public/contacts/reply', contact: @contact %>
            </td>
          </tr>
        <% end %>
      </table>

    </div>
  </div>
</div>

