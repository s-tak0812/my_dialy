<div class="container my-5">
  <div class='row'>
    <div class="col-12 px-5 px-sm-0 mx-auto">
      <%= form_with model: contact do |f| %>
        <div class="form-group my-3">
          <%= f.label :title %>
          <%= f.text_field :title, placeholder: "タイトル", autofocus: true, class: 'form-control contact_title' %>
        </div>

        <div class="form-group my-3">
          <%= f.label :body %>
          <%= f.text_area :body, placeholder: "お問い合わせ内容をお書きください", class: 'form-control blog_body', rows:"5" %>
        </div>

        <div class="form-group text-center my-3">
          <%= f.submit "送信", class: 'btn btn-outline-success' %>
        </div>
      <% end %>

    </div>
  </div>
</div>
