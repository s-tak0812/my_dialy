<%= form_with model: household_budget do |f| %>

  <div class="form-group my-3">
    <div class="row">
      <div class="col-4">
        <%= f.label :date %>
        <%= f.date_field :date, class: 'form-control household_budget_date' %>
      </div>

      <div class="col-7 offset-1">
        <%= f.label :title %><br>
        <%= f.select :title, HouseholdBudget.titles.keys.map {|k| [I18n.t("enums.household_budget.title.#{k}"), k]}, class: "title-select" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :price %>
    <%= f.text_field :price, placeholder:"1000", class: "form-control household_budget_price" %>
  </div>


  <div class="form-group">
    <%= f.radio_button :is_active, "false" %>
    <%= f.label :is_active_false, "支出" %>
    <%= f.radio_button :is_active, "true" %>
    <%= f.label :is_active_true, "収入" %>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
