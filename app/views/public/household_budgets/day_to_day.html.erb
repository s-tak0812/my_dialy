<div class="container my-5">
  <div class="row">
    <div class="col-sm-12 col-md-10 col-lg-10 px-5 px-sm-0 mx-auto">
      <div class="d-flex justify-content-center">
        <h3 class="bg-light">
          <strong>
            <%= @from %> ~ <%= @to %>の家計簿
          </strong>
        </h3>
      </div>
      <!--絞り込み期間の収支合計-->
      <div class="my-5">
        <span class="d-flex justify-content-center mb-2"><strong>収支合計</strong></span>
        <%= render 'public/customers/household_budgets', incomes: @incomes, spendings: @spendings %>
      </div>
      <!--内訳一覧-->
      <%= render 'public/household_budgets/sort_form', from: @from, to: @to %>
      <%= render 'public/household_budgets/day_to_day_index', household_budgets: @household_budgets %>
    </div>
  </div>
</div>

