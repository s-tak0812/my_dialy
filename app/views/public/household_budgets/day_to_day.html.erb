<div class="container my-5">
  <div class="row">
    <div class="col-sm-12 col-md-10 col-lg-8 px-5 px-sm-0 mx-auto">
      <div class="d-flex justify-content-center">
        <h3 class="bg-light">
          <strong>
            <%= @from.to_time.strftime('%Y/%m/%d') %> ~ <%= @to.to_time.strftime('%Y/%m/%d') %>の家計簿
          </strong>
        </h3>
      </div>
      <!--絞り込み期間の収支合計-->
      <div class="col-5 mx-auto my-5">
        <span class="d-flex justify-content-center mb-2"><strong>収支合計</strong></span>
        <%= render 'public/customers/household_budgets', incomes: @incomes, spendings: @spendings %>
      </div>
      <!--title別の絞り込み検索窓-->
      <%= render 'public/household_budgets/sort_form', from: @from, to: @to %>
      <!--内訳一覧-->
      <%= render 'public/household_budgets/index', household_budgets: @household_budgets_pagination %>
    </div>
  </div>

  <div class="d-flex justify-content-center mt-3">
    <%= paginate @household_budgets_pagination %>
  </div>

  <div class="d-flex justify-content-center my-3">
    <%= link_to "一覧に戻る", household_budgets_path, class:"btn btn-outline-secondary" %>
  </div>
</div>

