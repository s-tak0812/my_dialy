<span class="d-flex justify-content-center"><strong>内訳</strong></span>
<table class="table table-hover my-3 text-center">
  <thead class="table-active">
    <tr>
      <th>項目</th>
      <th>金額</th>
      <th>ステータス</th>
      <th style="width:20%;"></th>
    </tr>
  </thead>
  <tbody>
    <% household_budgets.each do |household_budget| %>
      <tr>
        <td><%= household_budget.title_i18n %></td>
        <td><%= household_budget.price.to_s(:delimited) %></td>
        <td>
          <% if household_budget.is_active == false %>
            <span class="text-danger"><strong>支出</strong></span>
          <% else %>
            <span class="text-success"><strong>収入</strong></span>
          <% end %>
        </td>
        <td class="d-flex justify-content-between">
          <%= link_to edit_household_budget_path(household_budget.id), class:"text-success mx-2" do %>
            <i class="fas fa-edit"></i>
          <% end %>

          <%= link_to household_budget_path(household_budget.id), method: :delete,
          "data-confirm" => '消しますか?', class:"text-danger mr-2" do %>
            <i class="fas fa-times-circle"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
