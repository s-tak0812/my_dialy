<h1>Public::HouseholdBudgets#new</h1>

<ul>
  <li><%= flash[:alert] %></li>
  <% @household_budget.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
</ul>

<%= form_with model: @household_budget do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.select :title, HouseholdBudget.titles.keys, {prompt: "選択してください"}, class: "title-select" %>
  </div>
  <div class="form-group">
    <%= f.label :price %>
    <%= f.text_field :price, placeholder:"1000", class: "form-control price" %>
  </div>

  <div class="form-group">
    <%= f.label :date %>
    <%= f.date_field :date, class: 'form-control blog_date' %>
  </div>

  <div class="form-group">
    <%= f.radio_button :is_active, "false" %>
    <%= f.label :is_active_false, "マイナス" %>
    <%= f.radio_button :is_active, "true" %>
    <%= f.label :is_active_true, "プラス" %>
  </div>


  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
