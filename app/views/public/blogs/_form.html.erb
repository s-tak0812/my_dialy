<%= form_with model:blog do |f| %>
  <div class="form-group my-3">
    <div class="row">
      <div class="col-4">
        <%= f.label :date %>
        <%= f.date_field :date, class: 'form-control blog_date' %>
      </div>

      <div class="col-7 offset-1">
        <%= f.label :画像 %>
        <%= f.file_field :image, class: 'form-control-file blog_image', accept: 'image/*' %>
      </div>
    </div>
  </div>

  <div class="form-group my-3">
    <%= f.label :title %>
    <%= f.text_field :title, placeholder: "タイトル", autofocus: true, class: 'form-control blog_title' %>
  </div>
  <div class="form-group my-3">
    <%= f.label :body %>
    <%= f.text_area :body, placeholder: "内容", class: 'form-control blog_body', rows:"10" %>
  </div>

  <div class="form-group text-center my-5">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
