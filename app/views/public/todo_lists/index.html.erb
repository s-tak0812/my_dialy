<div class="container my-5">
  <div class="col-12 px-5 px-sm-0 mx-auto">
    <div class="d-flex justify-content-center">
      <h3 class="bg-light"><strong>メモ一覧</strong></h3>
    </div>

    <div class="my-3">
      <%= link_to new_todo_content_path, class: "btn btn-outline-secondary" do  %>
        <span class="text-dark h6"><i class="fas fa-plus-circle"></i> メモ</span>
      <% end %>
    </div>

    <div class="col-12">
      <div class="d-flex flex-wrap">
        <% @todo_lists.each do |list| %>
          <div class="col-sm-12 col-md-6 col-lg-6">
            <table class="table table-hover text-left">
              <thead class="table-active">
                <tr>
                  <th>
                    <%= link_to list.title, todo_list_path(list.id), class:"btn btn-outline-dark" %>
                  </th>
                  <th style="width:10%;"></th>
                </tr>
              </thead>
              <tbody>
                <% list.todo_contents.each do |todo| %>
                  <tr>
                    <td><%= simple_format(todo.content) %></td>
                    <td>
                      <%= link_to todo_content_path(todo.id), method: :delete do %>
                        <i class="fas fa-times-circle text-danger" data-toggle="tooltip" data-placement="right" title="削除"></i>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
