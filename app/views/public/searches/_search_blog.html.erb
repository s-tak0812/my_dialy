<%= form_with url: searches_search_path(model:"blog"), method: :get, local: true do |f| %>
  <div class="search_form d-flex justify-content-start">
    <div>
      <%= f.text_field :content, class: "form-control", placeholder: "Blogタイトル検索" %>
      <%= f.hidden_field :model, :value => "blog" %>
    </div>
    <div>
      <%= button_tag type: "submit", class: "btn btn-secondary" do %>
        <i class="fas fa-search"></i>
      <% end %>
    </div>
  </div>
<% end %>